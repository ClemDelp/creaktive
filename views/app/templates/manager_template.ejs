<div class="row" id="manager-container">
	 	<div class="large-12 columns">
	 		<h1>Manager</h1>
	 		<hr />
	 	</div>

	 	<dl class="tabs vertical" data-tab>
	 		<dd><a class="active" href="#panel-1">Projects</a></dd>
	 		<dd><a  href="#panel-3">Users</a></dd>
	 	</dl>

	 	<div class="tabs-content vertical">
		 	<div class="content active" id="panel-1"></div>
			<div class="content" id="panel-3"></div>
	 	</div>
</div>

