<script type="text/template" id="permission-template">
	<td class="large-1 medium-1 small-1"><img src="{{= permission.user.img}}"></td>
	<td>{{= permission.user.name}}</td>
	<td>{{= permission.right}}</td>
	<td><a href="#" class="removePermission"><img data-user-id="{{= permission.user.id}}" data-project-id="{{= project.id}}" src="img/delete.png"></a></td>
</script>



<script type="text/template" id="permissionTable-template">
	<tr><th></th<th>Group</th><th>Name</th><th>Right</th><th></th></tr>
</script>



<script type="text/template" id="project-template">
	<div class=row>
		<a href="/concepts?projectId={{= project.id}}"><h3>{{= project.title }}</h3> </a>

		<blockquote>{{= project.description }} </blockquote>
		<a href="#" data-dropdown="drop{{= project.id }}">Add Permission -></a>
		<div id="drop{{= project.id }}" data-dropdown-content class="f-dropdown content">
			<div class="large-12 columns">
		      <label>Select right :</label>
		      <select id="permission_right">
		        <option value="Read and Write">Read and Write</option>
		        <option value="Read only">Read only</option>
		      </select>
		    

		    {{ _.each(users, function(user) { }}
		    	<div class="panel addPermission" data-user-id="{{= user.id }}" data-project-id="{{= project.id}}">
		    		{{= user.name }}
	    		</div>
	    	{{ }) }}

	    	</div>

		</div>
	</div>
</script>



<script type="text/template" id="projects-template">
	<h3>Project manager</h3>
	<a href="#" class="button radius" data-dropdown="drop3">Add Project</a>

	<div id="drop3" data-dropdown-content class="f-dropdown content">
		<form data-abide>
			<div class="name-field large-12 columns">
				<label>Title <small>required</small></label>
				<input type="text" id="project_title" required pattern="[a-zA-Z]+">
				<small class="error">Title is required and must be a string.</small>
			</div>
		    <div class="large-12 columns">
		      <label>Description</label>
		      <textarea id="project_description"></textarea>
		    </div>
		</form>
		<hr>
		<a class="button addProject" href="#">Submit</a>
	</div>
</script>