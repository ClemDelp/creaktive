/*User templates*/
/////////////////////////////////////////////////////////////////////
-->
<script type="text/template" id="user-template">
	<td class="large-1 medium-1 small-1"><img src="{{= user.img}}"></td>
	<td>{{= user.name}}</td>
	<td>{{= user.email}}</td>
	<td bgcolor="{{= user.color}}"></td>
	<td><a href="#" class="remove"><img data-id-user="{{= user.id}}" src="img/delete.png"></a></td>
</script>

<script type="text/template" id="usersTable-template">
	<tr><th></th><th>Username</th><th>Email</th><th>Color</th></tr>
</script>

<script type="text/template" id="users-template">
	<h3>Users manager</h3>

	<a href="#" class="button radius" data-dropdown="drop1">Add User</a>

	<div id="drop1" data-dropdown-content class="f-dropdown content">
		<form data-abide>
			<div class="name-field large-12 columns">
				<label>Your name <small>required</small></label>
				<input type="text" id="users_view_name" required pattern="[a-zA-Z]+">
				<small class="error">Name is required and must be a string.</small>
			</div>
			<div class="email-field large-12 columns">
				<label>Email <small>required</small></label>
				<input type="email" id="users_view_email" required>
				<small class="error">An email address is required.</small>
			</div>
			<div class="name-field large-12 columns">
				<label>Password <small>required</small></label>
				<input type="text" id="users_view_pw" required pattern="[a-zA-Z]+">
				<small class="error">Password is required and must be a string.</small>
			</div>
			<div class="large-12 columns">
				<label>Color <small>required</small></label>
				<input type="color" id="users_view_color" required>
				<small class="error">Color is required</small>
			</div> 
		</form>
		<hr>
		<a class="button addUser" href="#">Submit</a>

	</div>
</script>


