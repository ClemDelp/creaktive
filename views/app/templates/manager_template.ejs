<script type="text/template" id="userGroup-template">
	<td class="large-1 medium-1 small-1"><img src="{{= user.img}}"></td>
	<td>{{= user.name}}</td>
	<td>{{= user.email}}</td>
	<td><a href="#" class="removeFromGroup"><img data-user-id="{{= user.id}}" data-group-id="{{= group.id}}" src="img/delete.png"></a></td>

</script>

<script type="text/template" id="userGroupTable-template">
	<tr><th></th><th>Name</th><th>Email</th><th></th></tr>
</script>

<script type="text/template" id="group-template">
	<h3>{{= group.title }}</h3>
	<a href="#" class="button radius" data-dropdown="drop{{= group.id }}">Add User</a>

	<div id="drop{{= group.id }}" data-dropdown-content class="f-dropdown content">
		<ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-4">

		{{ _.each(users, function(user) { }}
			<li >
				<img src="{{= user.img}}" data-user-id="{{= user.id}}" data-group-id="{{= group.id}}" class="addToGroup">
				{{= user.name}}
			</li>
		{{ }) }}
		</ul>
	</div>
	<a href='#' data-group-id='{{= group.id}}' class='button tiny alert removeGroup'>Remove Group</a>
</script>

<script type="text/template" id="groups-template">
	<h3>Groups manager</h3>
	<a href="#" class="button radius" data-dropdown="drop2">Add Group</a>

	<div id="drop2" data-dropdown-content class="f-dropdown content">
		<form data-abide>
			<div class="name-field large-12 columns">
				<label>Title <small>required</small></label>
				<input type="text" id="groups_view_title" required pattern="[a-zA-Z]+">
				<small class="error">Title is required and must be a string.</small>
			</div>
		</form>
		<hr>
		<a class="button addGroup" href="#">Submit</a>


	</div>
</script>


