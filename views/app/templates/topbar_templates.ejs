<script type="text/template" id="notification-log-template">
  <a href="#" class="globalValidation button alert tiny">Global validation</a>
  {{_.each(notifications,function(notification){ }}
    <div class="row panel" id="notification_{{- notification.id }}">
      <img class="large-2 small-2 columns" src="{{- notification.from.img }}">
      <strong class="large-10 small-10 columns">{{- notification.from.name}}</strong>
      {{- notification.content }}
      <a data-id-notification="{{- notification.id}}" class="button tiny open">Open</a>
      <a data-id-notification="{{- notification.id}}" class="button tiny success validation">Validation</a>
    </div>
  {{ }); }}
</script>

