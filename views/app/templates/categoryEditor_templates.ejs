<!-- Modals -->
<div id="categoryEditorModal" class="reveal-modal small" data-reveal></div>
<!-- //////////////////////////////////////////////////////////////////////: -->
<script type="text/template" id="categoryEditor-normal-template">
    <div class="row">
        <a href="#" class="button small radius success expand"><strong>{{- category.title }}</strong></a>
        <a href="#" data-dropdown="drop{{- category.id }}" class="button tiny round dropdown">Actions</a>
        <ul id="drop{{- category.id }}" data-dropdown-content class="f-dropdown">
          <li><a href="#" class="edit">Edit</a></li>
          <li><a href="#" class="removeCategory">Remove</a></li>
        </ul>

        {{= category.description }}
    </div>
</script>

<script type="text/template" id="categoryEditor-edition-template">
    <div class="row">
        <a href="#" class="button small radius success expand"><strong>{{- category.title }}</strong></a>
        <a href="#" class="button tiny round success updateCategory">Update!</a>
        <a href="#" class="button tiny round secondary cancelEdition">Cancel</a>
        <input type="text" class="title_category" value="{{- category.title }}"/>
        <textarea  class="ckeditor"  name="editor" rows="10" cols="80">{{= category.description }}</textarea>        
    </div>
</script>