<div id="workspacesList-container" class="row"></div>

<script type="text/template" id="workspacesList-search-template">
    <br>
    <div class="large-12 columns">
      <div class="row expand collapse">
        <div class="small-10 columns">
          <input type="text" class="search" placeholder="find workspaces by name..." />
        </div>
        <div class="small-2 columns">
          <a href="#" class="button postfix"><img src="/img/icones/Search-24.png" /></a>
        </div>
      </div>
    </div>
</script>

<script type="text/template" id="workspacesList-list-template">
	<div class="workspaces_container_list large-12 columns">
		<label>{{- title }}</label>
		{{ _.each(workspaces, function(project){ }}
			<a href="/bbmap?projectId={{- project.id }}#visu" class="expand button radius secondary tiny">
				{{ if(starred == true){ }}<img style="float:left" src="/img/icones/Shape-Star2-24.png" />{{ } }}
				{{-project.title}}
			</a>
		{{ }); }}
	</div>
</script>

<script type="text/template" id="workspacesList-template">
    <div class="workspaces_container large-12 medium-12 small-12 columns panel">
	    <h4>{{ if(starred == true){ }}<img src="/img/icones/Shape-Star2-32-blue.png" />{{ }else{ }}<img src="/img/icones/User-Profile-32-blue.png" />{{ } }}{{- title }}
	    {{ if(newButton == true){ }}
		    <button class="button small radius success" data-dropdown="wks_new_dropdown" aria-controls="wks_new_dropdown" aria-expanded="true">Create new workspace  Â»</button>
		    <div id="wks_new_dropdown" class="f-dropdown content medium" data-dropdown-content="" aria-hidden="false" tabindex="-1" >
			  	<fieldset>
				    <legend>Create workspace</legend>
				    <div class="alertBox large-12 columns">
				    </div>
				    <div class="large-12 columns">
				    	<label>Title
				        <input type="text" id="wks_title" placeholder="title..." />
				    	</label>
				    </div>
				    <div class="large-12 columns">
					    <label>Description
					    <textarea id="wks_description" placeholder="objectives, context..."></textarea>
						</label>
				    </div>
				    <div class="large-12 columns">
				        <label>Visibility
				        <select id="wks_visibility">
					      <option value="private">Private</option>
					      <option value="public">Public</option>
					    </select>
						</label>
				    </div>
				    <div class="large-12 columns">
				        <label>Organisation
				        <select id="wks_organisation">
					      <option value="none">(none)</option>
					    </select>
						</label>
				    </div>
				    <div class="large-12 columns">
				    	<a href="#" id="wks_create" class="button success expand">Create</a>
				    </div>
				</fieldset>
			</div>
		{{ } }}
		</h4>
	    <br>
	    <div class="workspaces_container">
		{{ _.each(workspaces, function(project){ }}
			<ul class="item pricing-table">
				<li class="price">
					{{ if(starred == true){ }}
						<a style="float:left" href="#" class="round secondary tiny button unstarred" data-id="{{-project.id}}"><img data-id="{{-project.id}}" src="/img/icones/Shape-Star2-24.png" /></a>
					{{ }else{ }}
						<a style="float:left" href="#" class="round secondary tiny button starred" data-id="{{-project.id}}"><img data-id="{{-project.id}}" src="/img/icones/Shape-Star2-24_white.png" /></a>
					{{ } }}
					{{-project.title}}
					{{ if(project.image){ }}<img class="large-12 medium-12 small-2" src="/S3/getUrl?amz_id={{- project.image}}" />{{ }; }}
				</li>
				<li class="description">{{=project.content}}</li>
				<li class="bullet-item"><em>Created by {{-project.author.name}} at {{-project.date}}</em></li>
				<li class="cta-button"><a class="button radius expand" href="/bbmap?projectId={{- project.id }}#visu">Open</a></li>
			</ul>
		{{ });}}
		</div>
	    
   	</div>
</script>