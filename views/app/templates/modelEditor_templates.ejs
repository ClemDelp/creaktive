<!-- Timeline template parts -->
<script type="text/template" id="modelEditor-normal-template">
    <center>
	    <div class="panel">
	    	<a href="#" class="button" style="{{-model.css}}">{{= model.title }}</a>
	    	<br>
	    	{{= model.content }}
	   	</div>
	</center>
	<a href="#" class="button tiny secondary edit">Edit</a>
	<a href="#" id="{{-model.id}}_action" class="button tiny secondary structureSubTree">Structure subtree</a>
</script>

<script type="text/template" id="modelEditor-edition-template">
    <div class="panel">
	    <a href="#" class="button tiny round success updateModel">Update!</a>
	    <a href="#" class="button tiny round secondary cancelEdition">Cancel</a>
	    <input type="text" class="title" value="{{- model.title}}"/>
	    <textarea  class="ckeditor"  name="editor" rows="10" cols="80">{{= model.content }}</textarea>
	</div>
</script>
