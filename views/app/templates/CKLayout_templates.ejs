<!-- Modals -->
<div id="CKLayoutModal" class="reveal-modal medium" data-reveal>
  <ul class="tabs" id="tabs" data-tab>
    <li class="tab-title active"><a href="#panel2-1">Content</a></li>
    <li class="tab-title"><a href="#panel2-2">Activities</a></li>
  </ul>
  <div class="tabs-content">
    <div class="content active" id="panel2-1">
      <div id="cklayout_content_container"></div>
    </div>
    <div class="content" id="panel2-2">
      <div id="cklayout_activities_container"></div>
    </div>
  </div>
</div>
<!-- //////////////////////////////////////////////////////////////////////: -->
<script type="text/template" id="CKLayout-header-template">
  <h2>
    {{-model.title}} 
    {{ if((model.type != "category")&&(model.type != "project")){ }}<span class="success round label" style="background-color:{{- model.color }}">{{- model.label}}</span>{{ } }}
    <span class="round label">{{-model.type}}</span>
    {{ _.each(model.tags, function(tag) { }}
        <span class="success round label" style="cursor:pointer">{{-tag}}</span>
    {{ }); }}
  </h2>
  <hr> 
  {{ _.each(labels, function(label){ }}
    <a href="#" class="button tiny secondary updateLabel" data-model-id="{{-model.id}}" data-label-color="{{-label.color}}" data-label-title="{{-label.title}}">{{-label.title}}</a>
  {{ }); }}
  {{ if(model.type == "knowledge"){ }}
    <a href="#" class="button tiny secondary toCategory">convert to category</a>
  {{ }else if(model.type == "category"){ }}
    <a href="#" class="button tiny secondary toKnowledge">convert to knowledge</a>
  {{ } }}
  <a href="#" class="button tiny alert remove">remove</a>
    
</script>

<script type="text/template" id="CKLayout-footer-template">
  <i>Last update by <b>{{-model.user.name}}</b> at {{-model.date}}</i>
</script>