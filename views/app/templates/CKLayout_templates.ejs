<!-- Modals -->
<div id="CKLayoutModal" class="reveal-modal medium" data-reveal>
  <ul class="tabs" id="tabs" data-tab>
    <li class="tab-title active"><a href="#panel2-1">Content</a></li>
    <li class="tab-title"><a href="#panel2-2">Activities</a></li>
  </ul>
  <div class="tabs-content">
    <div class="content active" id="panel2-1">
      <div id="cklayout_content_container"></div>
    </div>
    <div class="content" id="panel2-2">
      <div id="cklayout_activities_container"></div>
    </div>
  </div>
</div>
