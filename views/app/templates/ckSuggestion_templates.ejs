<script type="text/template" id="ck-explorations-template">
	<p>Nous avons trouvé {{-explorations.length}} piste(s) conceptuelle(s) explorable(s).</p>
	<table style="width:100%">
		<thead>
		    <tr>
		      <th>Degrés - risque</th>
		      <th>Branche concepts</th>
		    </tr>
	  	</thead>
	  	<tbody>
			{{_.each(explorations,function(exploration){ }}
			<tr>
				<td>
					<span class="label {{-exploration.style}} round tiny" title="{{-exploration.desc.fr}}">
						{{-exploration.title.fr}} - {{-exploration.value}}<small>/3</small>
					</span>
				</td>
				<td>
					{{_.each(exploration.branche,function(node){ }}
					{{-node.title}} <b>-></b>
					{{ }); }}
					<font style="color:red">?</font>
				</td>
			</tr>
			{{ }); }}
		</tbody>
	</table>
</script>

