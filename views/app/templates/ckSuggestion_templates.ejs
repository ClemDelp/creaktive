<script type="text/template" id="actions-percentage-template">
	<div class="large-10 medium-10 small-10 columns">
		<div class="progress radius" style="background:white">
		  <span class="meter" style="width:{{-perc}}%"><b style="color:white">{{-perc}}% completed !</b></span>
		</div>
	</div>
	<div class="large-2 medium-2 small-2 columns">
		<a href="#" class="tiny button radius success refresh" title="refresh">refresh</a>
	</div>
</script>

<script type="text/template" id="normalisation-suggestion-template">
  <tr>
  	<td width="20%">
  		<div class="{{- suggestion.element.css_manu }} {{- suggestion.element.css_auto }}" style="padding:10px;">
  			<center><b>{{- suggestion.element.title }}</b></center>
  		</div>
  	</td>
  	<td width="80%">
	  	<p>{{- suggestion.suggestion.fr }}</p>
	  	<select class="template_selection" data-id="{{-suggestion.element.id}}">
		    {{ _.each(suggestion.options,function(option){ }}
		        <option {{ if(option.value == suggestion.element.css_manu){ }}selected="selected"{{ } }} value="{{- option.value }}">{{- option.name.fr }} : {{- option.desc.fr }}</option>
		  	{{ }); }}
	  	</select>
  	</td>
  </tr>
</script>

<script type="text/template" id="normalisation-localisation-template">
  	<tr>
	  	<td width="20%">
	  		<div class="{{- localisation.element.css_manu }} {{- localisation.element.css_auto }}" style="padding:10px;">
	  			<center><b>{{- localisation.element.title }}</b></center>
	  		</div>
	  	</td>
	  	<td width="80%">
		  	<p>{{-localisation.suggestion.fr}}</p>
		  	<select class="k_localisation" data-id="{{-localisation.element.id}}">
             	{{ _.each(localisation.options,function(option){ }}
			        <option {{ if(option.value == localisation.element.inside){ }}selected="selected"{{ } }} value="{{- option.value }}">{{- option.name.fr }} : {{- option.desc.fr }}</option>
			  	{{ }); }}
		  	</select>
	  	</td>
	</tr>

</script>

<script type="text/template" id="evaluation-suggestion-template">
  <tr>
  	<td>
	  	<p>{{- suggestion.suggestion.fr }}</p>
	  	{{ if(suggestion.options.length > 0){ }} 
	  		<ul class="panel">
		  		{{ _.each(suggestion.options,function(option){ }}  
		  			<li>{{-option.name.fr}} - {{-option.desc.fr}}</li>
		  		{{ }); }}
	  		</ul>
	  	{{ } }}
  	</td>
  </tr>
</script>

<script type="text/template" id="radar-detail-template">
	<table style="width:100%">
		{{ _.each(evaluations,function(evaluation){ }} 
			<tr><td><b>{{- evaluation.options[0].name.fr }} -  <span class="label tiny round">{{- evaluation.options[0].value }} <small>/ 4</small></span></b><br><small>{{- evaluation.options[0].desc.fr }}</small></td></tr>
		{{ }); }}
	</table>
</script>

<script type="text/template" id="objectif-sliders-template">
	<table style="width:100%">
		{{ _.each(parameters,function(parameter){ }}
		<tr>
			<div class="row">
			  <div class="small-10 medium-10 large-10 columns">
			  	<b>{{-parameter.name.fr}}</b>
			    <div id="{{-parameter.name.en}}_objectif" class="range-slider round" data-slider data-options="start: 0; end: 4;initial: {{-parameter.value}};display_selector: #{{-parameter.name.en}}_slider;">
			      <span class="range-slider-handle" role="slider" tabindex="0"></span>
			      <span class="range-slider-active-segment"></span>
			    </div>
			  </div>
			  <div class="small-2 medium-2 large-2 columns">
			    <span id="{{-parameter.name.en}}_slider" class="label tiny round success"></span>
			  </div>
			</div>
		</tr>
		{{ }); }}
	</table>
	<a href="#" title="validation" class="tiny button success updateObjectifCanvas">Valider</a>
</script>
