<!-- EVALUATION -->

<script type="text/template" id="ck-v2or-analyses-template">
	<div class="large-12 medium-12 small-12 panel">
	  	<p>{{- suggestion.suggestion.fr }}</p>
	  	{{ if(suggestion.options.length > 0){ }} 
	  		<ul class="panel">
		  		{{ _.each(suggestion.options,function(option){ }}  
		  			<li>{{-option.name.fr}} - {{-option.desc.fr}}</li>
		  		{{ }); }}
	  		</ul>
	  	{{ } }}
  	</div>
</script>

<script type="text/template" id="ck-v2or-values-template">
	<table style="width:100%">
		{{ _.each(evaluations,function(evaluation){ }} 
			<tr><td><b>{{- evaluation.options[0].name.fr }} -  <span class="label tiny round">{{- evaluation.options[0].value }} <small>/ 4</small></span></b><br><p>{{- evaluation.options[0].desc.fr }}</p></td></tr>
		{{ }); }}
	</table>
</script>

<script type="text/template" id="ck-explorations-template">
	<p>Nous avons trouvé {{-explorations.length}} piste(s) conceptuelle(s) explorable(s).</p>
	<table style="width:100%">
		<thead>
		    <tr>
		      <th>Degrés - risque</th>
		      <th>Branche concepts</th>
		    </tr>
	  	</thead>
	  	<tbody>
			{{_.each(explorations,function(exploration){ }}
			<tr>
				<td>
					<span class="label {{-exploration.style}} round tiny" title="{{-exploration.desc.fr}}">
						{{-exploration.title.fr}} - {{-exploration.value}}<small>/3</small>
					</span>
				</td>
				<td>
					{{_.each(exploration.branche,function(node){ }}
					{{-node.title}} <b>-></b>
					{{ }); }}
					<font style="color:red">?</font>
				</td>
			</tr>
			{{ }); }}
		</tbody>
	</table>
</script>