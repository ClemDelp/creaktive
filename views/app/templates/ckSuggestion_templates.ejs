<script type="text/template" id="ck-analyse-keywords-template">
	<p>{{-sentence_init}}</p>
	<table style="width:100%">
		{{ _.each(keywords,function(word){ }} 
		<tr>
			{{ if(word.tagged.length > 0 ){ }}
				<td width="20%">
					<span class="tiny success label round">{{-word.tagged.length}}</span>
					{{ if(word.poche != undefined){ }}
						<div class="{{-word.poche.css_auto}}" style="padding:10px;">{{-word.poche.title}}</div>
					{{ }else{ }}
						<b>{{-word.title.fr}}</b>
					{{ } }}
					
				</td>
				<td><table style="width:100%"><tr><td><ul>
				{{ _.each(word.tagged,function(element){ }}
					<li style="list-style-type: disc;"><div class="{{-element.css_auto}} {{-element.css_manu}}" style="padding:10px;">{{-element.title}}</li>
				{{ });}} 
				</ul></td></tr></table></td>
				<td>
					<div class="row collapse">
				        <div class="small-10 columns">
				          	<input id="{{-word.tag}}_value" type="text" placeholder="{{-word.found.fr}}">
				        </div>
				        <div class="small-2 columns">
				          	<a href="#" data-tag="{{- word.tag}}" class="button postfix success new_cadrage">+</a>
				        </div>
				    </div>
				</td>
			{{ }else{ }}
				<td width="20%">
					{{ if(word.poche != undefined){ }}
						<div class="{{-word.poche.css_auto}}" style="padding:10px;">{{-word.poche.title}}</div>
					{{ }else{ }}
						<b>{{-word.title.fr}}</b>
					{{ } }}
				</td>
				<td colspan="2">
					<div class="row collapse">
				        <div class="small-10 columns">
				          	<input id="{{-word.tag}}_value" type="text" placeholder="{{-word.notFound.fr}}">
				        </div>
				        <div class="small-2 columns">
				          <a href="#" data-tag="{{- word.tag}}" class="button postfix new_cadrage">+</a>
				        </div>
				    </div>
				</td>
			{{ } }}
		</tr>
		{{ }); }} 
	</table>
</script>


