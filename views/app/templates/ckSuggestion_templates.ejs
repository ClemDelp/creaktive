<!-- OTHER -->

<script type="text/template" id="ck-header-perc-template">
	<table style="width:100%">
		<tr>
			<td width="30%"><p>{{-sentence}}</p></td>
			<td>
				<b>{{-perc}}% done !</b>
				<div class="progress small-12 medium-12 large-12 radius">
				  <span class="meter" style="width: {{-perc}}%"></span>
				</div>
			</td>
		</tr>
	</table>
</script>

<!-- KEYWORDS -->

<script type="text/template" id="ck-analyse-keywords-template">
	<table style="width:100%">
		<thead>
		    <tr>
		      <th>Poche</th>
		      <th>Connaissances associées</th>
		    </tr>
	  	</thead>
	  	<tbody>
			{{ _.each(keywords,function(word){ }} 
			<tr>
				
				<td width="30%">
					{{ if(word.poche != undefined){ }}
						<div class="{{-word.poche.css_auto}}" style="padding:10px;">
							<center>
								<span style="float:left" class="tiny {{ if(word.tagged.length > 0 ){ }}success{{ } }} label round">
									{{-word.tagged.length}}
								</span>
								<b>{{-word.poche.title}}</b>
							</center>
						</div>
					{{ }else{ }}
						<span class="tiny {{ if(word.tagged.length > 0 ){ }}success{{ } }} label round">
							{{-word.tagged.length}}
						</span>
						<b>{{-word.title.fr}}</b>
					{{ } }}
					
				</td>
				<td>
					{{ if(word.tagged.length > 0 ){ }}
						<div class="row" style="padding:20px">						
							{{ _.each(word.tagged,function(element){ }}
								<span class="{{-element.css_auto}} {{-element.css_manu}}" style="padding:10px;">{{-element.title}}</span>
							{{ });}}
						</div>
					{{ } }}
					<div class="row collapse">
				        <div class="small-10 columns">
				          	{{ if(word.tagged.length > 0 ){ }}
				          		<input id="{{-word.tag}}_value" type="text" placeholder="{{-word.found.fr}}">
				          	{{ }else{ }}
				          		<input id="{{-word.tag}}_value" type="text" placeholder="{{-word.notFound.fr}}">
				          	{{ } }}
				        </div>
				        <div class="small-2 columns">
				          	<a href="#" data-tag="{{- word.tag}}" class="button postfix {{ if(word.tagged.length > 0 ){ }}success{{ } }} new_cadrage">+</a>
				        </div>
				    </div>
				    <hr>
				</td>
			</tr>
			{{ }); }} 
		</tbody>
	</table>
</script>

<!-- NORMALISATION -->

<script type="text/template" id="normalisation-template">
    <table id="{{-anchor}}" style="width:100%">
    	<thead>
		    <tr>
		      <th>Elements</th>
		      <th>{{-sentence}}</th>
		    </tr>
	  	</thead>
	  	<tbody>
    	{{_.each(suggestions,function(suggestion){ }}
    		<tr>
			  	<td width="30%">
			  		<div class="{{- suggestion.element.css_manu }} {{- suggestion.element.css_auto }}" style="padding:10px;">
			  			<center><b>{{- suggestion.element.title }}</b></center>
			  		</div>
			  	</td>
			  	<td>
				  	<p>{{- suggestion.suggestion.fr }}</p>
				  	<select class="template_selection" data-id="{{-suggestion.element.id}}">
					    {{ _.each(suggestion.options,function(option){ }}
					        <option {{ if(option.value == suggestion.element.css_manu){ }}selected="selected"{{ } }} value="{{- option.value }}">{{- option.name.fr }} : {{- option.desc.fr }}</option>
					  	{{ }); }}
				  	</select>
			  	</td>
			  </tr>
    	{{ }); }}
    	</tbody>
    </table>
</script>

