<script type="text/template" id="manager-search-template">
	<div class="row">
		<div class="large-12 columns">
	      	<form data-abide class="row collapse">
		        <div class="name-field small-10 columns">
		          <input type="text" id="project_title" class="search" placeholder="new project title" required pattern="[a-zA-Z]+">
		        </div>
		        <div class="small-2 columns">
		          <a class="button newProject success postfix" href="#">new</a>
			    </div>
	      	</form>
	    </div>
	</div>
</script>

<script type="text/template" id="manager-project-template">
    <div class="item">
	    <ul class="pricing-table">
		  	<li class="price">
		  		<a href="#" class="openProjectModal manager button radius secondary" data-model-id="{{-project.id}}">
		  			<h3 data-model-id="{{-project.id}}">{{-project.title }}
					{{if(notifNbr > 0){ }}
	                    <span class="top-bar-unread">{{-notifNbr}}</span>
	                {{ } }}
	                </h3>
		  		</a>
		  	</li>
		  	<li class="description">
		  		{{ if(project.content == ""){ }}Add a description via the project editor{{ }else{ }} {{=project.content}} {{ } }}<br>
		  		Create by {{-project.author.name}} at {{-project.date}}
		  	</li>
		  	<li class="description">
		  		<strong style="color:green">{{-userNbr}}</strong> users on this project <a href="/userManager?projectId={{- project.id}}" class="button tiny round secondary">manage users</a>
		  	</li>
			<li class="cta-button">
				<a class="button success expand" href="/ckviewer?projectId={{- project.id}}">Open</a>
			</li>
		</ul>
    </div>
</script>

