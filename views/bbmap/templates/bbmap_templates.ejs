<!-- Container -->
<div id="bbmap_container" style="overflow:auto">
	<div id="actionbar"></div>
	
	<div id="map_container" class="">
    <div id="editor" class="panel large-2 medium-2 small-2 columns">
        <a href="#" class="closeEditor" style="float:right">close</a>
        <ul class="tabs" data-tab>
          <li class="tab-title active"><a href="#editModel"><img src="/img/file_edit.png"></a></li>
          <li class="tab-title"><a href="#attachementModel"><img src="/img/attach.png"></a></li>
          <li class="tab-title"><a href="#discussionModel"><img src="/img/comment.png"></a></li>
          <li class="tab-title"><a href="#activitiesModel"><img src="/img/error.png"></a></li>
          <li class="tab-title"><a href="#css3Model"><img src="/img/badge_css.png"></a></li>
        </ul>
        <div class="tabs-content">
          <div id="editModel" class="content active"></div>
          <div id="attachementModel" class="content"></div>
          <div id="discussionModel" class="content"></div>
          <div id="activitiesModel" class="content"></div>
          <div id="css3Model" class="content"></div>
        </div>
    </div>
    <div class="large-10 medium-10 small-10 columns">
      <div id="map" class="demo chart-demo"></div>
    </div>
	</div>
</div>
<!-- ******************************** -->
<script type="text/template" id="bbmap-joyride-template">
  <ol class="joyride-list" style="z-index:9999999" data-joyride>
    <li id="joyride_id" data-id="joyride" data-text="Ok" data-options="tip_location: top">
      <br>
      <input id="joyride_val" type="text" placeholder="name...">
    </li>
  </ol>
</script>

<script type="text/template" id="bbmap-bulle-template">
    <span id="{{-model.id}}_joyride"></span>
    <span id="{{-model.id}}" class="editTitle">{{-model.title}}</span>
    <div id="{{-model.id}}" class="ep icon">c</div>
    <div id="{{-model.id}}" class="ep2 icon">k</div>
    <div id="{{-model.id}}" class="ep3 icon">*</div>
    <div id="{{-model.id}}" class="sup icon">x</div>
    
</script>

<script type="text/template" id="bbmap-actionbar-template">
  <div>
	  <center>
      mode : 
      <select id="modeSelection" class="large-2 medium-2 small-2">
        <option value="visu" {{ if(mode == "visu"){ }}selected{{ } }}>Visualization</option>
        <option value="edit" {{ if(mode == "edit"){ }}selected{{ } }}>Edition</option>
      </select>
      filter : 
      <select id="filterSelection" class="large-2 medium-2 small-2">
        <option value="c" {{ if(filter == "c"){ }}selected{{ } }}>Concepts</option>
        <option value="k" {{ if(filter == "k"){ }}selected{{ } }}>Knowledges</option>
        <option value="p" {{ if(filter == "p"){ }}selected{{ } }}>Categories</option>
        <option value="ck" {{ if(filter == "ck"){ }}selected{{ } }}>Concepts & Knowledge</option>
        <option value="kp" {{ if(filter == "kp"){ }}selected{{ } }}>Knowledges & Categories</option>
        <option value="ckp" {{ if(filter == "ckp"){ }}selected{{ } }}>All</option>

      </select>
           
      {{ if((filter == "ck")){ }}
        <a href="#" class="tiny round button secondary ckOperator">Display CK operator</a>
      {{ } }}
      <a href="#" class="tiny round button secondary reset">Reset view</a>
      <a href="#" class="tiny button round secondary downloadimage">Download Image</a>
      <a href="#" class="tiny round button secondary zoomout">+</a>
      <span id="zoom_val"></span>
      <a href="#" class="tiny round button secondary zoomin">-</a>
      
      {{ if(mode == "edit"){ }}
        {{ if((filter == "c")||(filter == "ck")||(filter == "ckp")){ }}
          <img id="dropC" style="width:7%;z-index:999999" class="dropC" title="click and drop to create a new concept" src="/img/c.png">
        {{ } }}
        {{ if((filter == "p")||(filter == "kp")||(filter == "ckp")){ }}
          <img id="dropP" style="width:7%;z-index:999999" class="dropP" title="click and drop to create a new category" src="/img/p.png">
        {{ } }}
        {{ if((filter == "k")||(filter == "ck")||(filter == "ckp")||(filter == "kp")){ }}
          <img id="dropK" style="width:7%;z-index:999999" class="dropK" title="click and drop to create a new knowledge" src="/img/k.png">
        {{ } }}
      {{ } }}

    </center>
  </div>
</script>


