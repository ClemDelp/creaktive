<!-- Container -->
<div id="bbmap_container" style="overflow:auto">
	<div id="actionbar"></div>
	
	<div id="map_container" class="">
		<div class="large-10 medium-10 small-10 columns">
      <div id="map" class="demo chart-demo"></div>
    </div>
    <div id="editor" class="panel large-2 medium-2 small-2 columns">
        <a href="#" class="closeEditor" style="float:right">close</a>
        <ul class="tabs" data-tab>
          <li class="tab-title active"><a href="#editModel"><img src="/img/file_edit.png"></a></li>
          <li class="tab-title"><a href="#attachementModel"><img src="/img/attach.png"></a></li>
          <li class="tab-title"><a href="#discussionModel"><img src="/img/comment.png"></a></li>
          <li class="tab-title"><a href="#activitiesModel"><img src="/img/error.png"></a></li>
          <li class="tab-title"><a href="#css3Model"><img src="/img/badge_css.png"></a></li>
        </ul>
        <div class="tabs-content">
          <div id="editModel" class="content active"></div>
          <div id="attachementModel" class="content"></div>
          <div id="discussionModel" class="content"></div>
          <div id="activitiesModel" class="content"></div>
          <div id="css3Model" class="content"></div>
        </div>
    </div>
	</div>
</div>
<!-- ******************************** -->
<script type="text/template" id="bbmap-bulle-template">
    <span id="{{-model.id}}" class="editTitle">{{-model.title}}</span>
    <div id="{{-model.id}}" class="ep icon">c</div>
    <div id="{{-model.id}}" class="ep2 icon">k</div>
    <div id="{{-model.id}}" class="ep3 icon">*</div>
    <div id="{{-model.id}}" class="sup icon">x</div>
</script>

<script type="text/template" id="bbmap-actionbar-template">
  <div class="row">
	  <center>
      <strong><small style="color:#27AE60">Drag a new concept : </small></strong>
      <img id="dropC" style="width:5%;z-index:1" class="dropC" title="click and drap to create a new concept" src="/img/drop_c.png">
      <strong><small style="color:#2980B9">Drag a new knowledge : </small></strong>
      <img id="dropK" style="width:5%;z-index:1" class="dropK" title="click and drap to create a new knwledge" src="/img/drop_k.png">
      <a href="#" class="tiny round button secondary ckOperator">Display CK operator</a>

      <a href="#" class="tiny round button secondary reset">Reset</a>
      <a href="#" class="tiny round button secondary zoomout">+</a>
      <span id="zoom_val"></span>
      <a href="#" class="tiny round button secondary zoomin">-</a>
    </center>
  </div>
</script>