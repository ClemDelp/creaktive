<script type="text/template" id="bbmap-joyride-template">
  <ol class="joyride-list" style="z-index:9999999" data-joyride>
    <li id="joyride_id" data-id="joyride" data-text="Ok" data-options="tip_location: top">
      <br>
      <input id="joyride_val" type="text" placeholder="name...">
    </li>
  </ol>
</script>

<script type="text/template" id="bbmap-bulle-template">
    <span id="{{-model.id}}_joyride"></span>
    <span id="{{-model.id}}" class="editTitle">{{-model.title}}</span>
    <div id="{{-model.id}}" class="ep icon">c</div>
    <div id="{{-model.id}}" class="ep2 icon">k</div>
    <div id="{{-model.id}}" class="ep3 icon">*</div>
    <div id="{{-model.id}}" class="sup icon">x</div>
</script>

<script type="text/template" id="bbmap-top-element-template">
  <div id="modeSelection_ui">
    <select>
      <option value="visu" {{ if(mode == "visu"){ }}selected{{ } }}>Visualization</option>
      <option value="edit" {{ if(mode == "edit"){ }}selected{{ } }}>Edition</option>
    </select>
  </div>  
  <span id="zoom_ui">
    <a href="#" class="tiny round button secondary zoomout">+</a>
    <span id="zoom_val"></span>
    <a href="#" class="tiny round button secondary zoomin">-</a>
  </span>
</script>

<script type="text/template" id="bbmap-bottom-element-template">
  <span id="bbmap_bottom_ui">
    <center>
      filter : 
      <select id="filterSelection" class="large-1 medium-1 small-1">
        <option value="c" {{ if(filter == "c"){ }}selected{{ } }}>Concepts</option>
        <option value="k" {{ if(filter == "k"){ }}selected{{ } }}>Knowledges</option>
        <option value="p" {{ if(filter == "p"){ }}selected{{ } }}>Categories</option>
        <option value="ck" {{ if(filter == "ck"){ }}selected{{ } }}>Concepts & Knowledge</option>
        <option value="kp" {{ if(filter == "kp"){ }}selected{{ } }}>Knowledges & Categories</option>
        <option value="ckp" {{ if(filter == "ckp"){ }}selected{{ } }}>All</option>

      </select>
           
      {{ if((filter == "ck")||(filter == "ckp")){ }}
        <a href="#" class="tiny round button secondary ckOperator">Display CK operator</a>
      {{ } }}
      <a href="#" class="tiny round button secondary reset">Reset view</a>
      <a href="#" class="tiny button round secondary downloadimage">Download Image</a>
      <a href="#" class="tiny button round secondary screenshot">Send to CK - </a>
      
      
      {{ if(mode == "edit"){ }}
        {{ if((filter == "c")||(filter == "ck")||(filter == "ckp")){ }}
          <a href="#" id="dropC" style="{{- bbmap.css_concept_default }}" class="dropC" title="click and drop to create a new concept">concept</a>
        {{ } }}
        {{ if((filter == "p")||(filter == "kp")||(filter == "ckp")){ }}
          <a href="#" id="dropP" style="{{- bbmap.css_poche_default }}" class="dropP" title="click and drop to create a new category">category</a>
        {{ } }}
        {{ if((filter == "k")||(filter == "ck")||(filter == "ckp")||(filter == "kp")){ }}
          <a href="#" id="dropK" style="{{- bbmap.css_knowledge_default }}"  class="dropK" title="click and drop to create a new knowledge">knowledge</a>
        {{ } }}
      {{ } }}
    </center>
  </span>
</script>


