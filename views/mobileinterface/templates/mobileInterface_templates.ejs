<div id="mobileInterface_container"></div>

<script type="text/template" id="mobileInterface-template">
	<div class="row panel">
		<div class="row ">
			<div class="large-6 small-6 medium-6 columns">
				<img title="logo creaktive" src="/img/creaktive.png"/>
			</div>
			<div class="large-4 small-4 medium-4 columns">
				<h4>Welcome <b>{{-user.name}}</b></h4>
			</div>
			<div class="large-2 small-2 medium-2 columns">
				<a href="#" style="float:right" class="tiny round button secondary fullscreen"><img title="full-screen" src="/img/icones/Full-Screen-Expand-24.png"/></a>
			</div>
		</div>
		<br>
		<div class="row"><div id="info" class="large-12 small-12 medium-12 columns"></div></div>
		<div class="row">
		    <div class="large-12 columns">
		    	<label><b>Etape 1 - </b> Select a workspace
				<select id="project" class="expand">
			      	{{ _.each(projects,function(project){ }}
						<option value="{{- project.id }}">{{- project.title }}</option>
			    	{{ });}}
			    </select>
		    </div>
		</div>
		<div class="row">
		    <div class="large-12 columns">
		      <label><b>Etape 2 - </b> give a title
		        <input id="title" type="text" placeholder="title..." />
		      </label>
		    </div>
		</div>
		<div class="row">
		    <div class="large-12 columns">
		      <label><b>Etape 3 - </b> give a description (optional)
		        <textarea id="description" placeholder="description..."></textarea>
		      </label>
		    </div>
		 </div>
		<div class="row">
			<div class="large-6 small-6 medium-6 columns">
				<a href="#" class="button large success round expand addC">+ Add like Concept <img title="full-screen" src="/img/icones/Light-Bulb-white-32.png"/></a>
			</div>
			<div class="large-6 small-6 medium-6 columns">
				<a href="#" class="button large round expand addK">+ Add like Knowledge <img title="full-screen" src="/img/icones/Book-Open-white-32.png"/></a>
			</div>
		</div>
	</div>
</script>