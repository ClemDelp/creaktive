<div id="mobileInterface_container"></div>

<script type="text/template" id="mobileInterface-template">
	<div class="row ">
		<br>
		<div class="large-12 small-12 medium-12 columns">
			<div class="row ">
				<div class="large-6 small-6 medium-6 columns">
					<a href="/mobileManager" title="manager"><img title="logo creaktive" src="/img/creaktive.png"/></a>
				</div>
				<div class="large-6 small-6 medium-6 columns">
					<button href="#" style="float:right" data-dropdown="menuCreaktive2" aria-controls="menuCreaktive2" aria-expanded="false" class="button round secondary tiny dropdown"><img width="20" src="{{-user.img }}"/></button>
					<ul id="menuCreaktive2" data-dropdown-content class="f-dropdown" aria-hidden="true" tabindex="-1">
						<li><a href="#" class="fullscreen">Full screen</a></li>
						<li><a href="/logout">Logout</a></li>
					</ul>
				</div>
				<div class="large-12 small-12 medium-12 columns">
					<h3>{{-user.name }}</h3> 
					<center><h3>{{- project.title}}</h3></center>
				</div>
			</div>
			<br>
			<div class="row"><div id="info" class="large-12 small-12 medium-12 columns"></div></div>
			<div class="row">
			    <div class="large-6 small-12 medium-6 columns">
			      <label><b>Etape 1 - </b> give a title
			        <input id="title" type="text" placeholder="title..." />
			      </label>
			    </div>
			   	<div class="large-6 small-12 medium-6 columns">
			   		<label><b>Etape 2 - </b> choose a template
			   		<select id="template">
			        	{{ for( var k in templates){ }}
			        		<option value="{{- k }}">{{- templates[k].title}}</option>
			        	{{ } }}
			        </select>
			    </div>
			</div>
			<div class="row">
			    <div class="large-6 small-12 medium-6 columns">
			      <label><b>Etape 3 - </b> give a description <font style="color:blue">(optional)</font>
			        <textarea id="description" placeholder="description..."></textarea>
			      </label>
			    </div>
			    <div class="large-6 small-12 medium-6 columns">
					<label><b>Etape 4 - </b>Preview</label>
					<center><span id="preview"></span></center>
				</div>
			 </div>
			<div class="row">
				<div class="large-12 small-12 medium-12 columns">
					<br>
					<label><b>Etape 5 - </b>send to project
					<a href="#" class="button large round expand push">PUSH !</a>
				</div>
			</div>
		</div>
	</div>
</script>